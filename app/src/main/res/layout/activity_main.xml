<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pagesLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/pageButtons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/page1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/page1Constraint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    tools:context=".MainActivity"
                    tools:layout_editor_absoluteY="1dp"
                    tools:showIn="@layout/activity_main">

                    <ScrollView
                        android:id="@+id/debugTextScroll"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@id/debugCommand"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/debugText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="monospace"
                            android:gravity="start"
                            android:hint="@string/debug_text_hint"
                            android:importantForAutofill="no"
                            android:inputType="none"
                            android:scrollbarStyle="insideInset"
                            android:scrollbars="vertical"
                            android:singleLine="false"
                            android:textSize="@dimen/debugTextSize" />
                    </ScrollView>

                    <EditText
                        android:id="@+id/debugCommand"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:focusedByDefault="true"
                        android:fontFamily="monospace"
                        android:foreground="@color/colorButtonText"
                        android:gravity="center"
                        android:hint="@string/debug_command_hint"
                        android:importantForAutofill="no"
                        android:inputType="none"
                        android:singleLine="true"
                        android:textSize="@dimen/debugTextSize"
                        app:layout_constraintBottom_toTopOf="@id/debugButtons"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/debugTextScroll" />

                    <LinearLayout
                        android:id="@+id/debugButtons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <Button
                            android:id="@+id/btDebug"
                            style="@android:style/Widget.Material.Light.Button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_main"
                            android:minHeight="@dimen/btnHeight"
                            android:onClick="onButtonClick"
                            android:text="@string/debug_button_text"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="@dimen/btnTextSize" />

                        <Button
                            android:id="@+id/btClear"
                            style="@android:style/Widget.Material.Light.Button.Small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_main"
                            android:minHeight="@dimen/btnHeight"
                            android:onClick="onButtonClick"
                            android:text="@string/clear_button_text"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="@dimen/btnTextSize" />

                        <Button
                            android:id="@+id/btClearAll"
                            style="@android:style/Widget.Material.Light.Button.Small"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_main"
                            android:minHeight="@dimen/btnHeight"
                            android:onClick="onButtonClick"
                            android:text="@string/clear_all_button_text"
                            android:textColor="@android:color/primary_text_light"
                            android:textSize="@dimen/btnTextSize" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/page2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <SurfaceView
                    android:id="@+id/page2Surface"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/page3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/pageButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btPage1"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:minHeight="@dimen/btnHeight"
                android:onClick="onTabButtonClick"
                android:text="@string/page1_button"
                android:textColor="@color/colorButtonText"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/btPage2"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:minHeight="@dimen/btnHeight"
                android:onClick="onTabButtonClick"
                android:text="@string/page2_button"
                android:textColor="@color/colorButtonText"
                android:textSize="@dimen/btnTextSize" />

            <Button
                android:id="@+id/btPage3"
                style="@android:style/Widget.Material.Button.Colored"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:minHeight="@dimen/btnHeight"
                android:onClick="onTabButtonClick"
                android:text="@string/page3_button"
                android:textColor="@color/colorButtonText"
                android:textSize="@dimen/btnTextSize" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>