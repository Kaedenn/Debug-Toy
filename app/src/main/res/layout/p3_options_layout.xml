<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/page3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <Switch
                android:id="@+id/switchDebug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:nextFocusDown="@id/switchAnimation"
                android:onClick="onSwitchToggle"
                android:text="@string/opt_debug_name" />

            <Switch
                android:id="@+id/switchAnimation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:nextFocusUp="@id/switchDebug"
                android:nextFocusDown="@id/radioAnimNone"
                android:onClick="onSwitchToggle"
                android:text="@string/switchAnimation" />

            <RadioGroup
                android:id="@+id/pageAnimationSelection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkedButton="@id/radioAnimFade">

                <RadioButton
                    android:id="@+id/radioAnimNone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusUp="@id/switchAnimation"
                    android:nextFocusDown="@id/radioAnimFade"
                    android:onClick="onPageAnimationSelection"
                    android:text="@string/radioAnim0" />

                <RadioButton
                    android:id="@+id/radioAnimFade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nextFocusUp="@id/radioAnimNone"
                    android:nextFocusDown="@id/radioAnimSlide"
                    android:onClick="onPageAnimationSelection"
                    android:text="@string/radioAnim1" />

                <RadioButton
                    android:id="@+id/radioAnimSlide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onPageAnimationSelection"
                    android:text="@string/radioAnim2" />
            </RadioGroup>


        </LinearLayout>
    </ScrollView>

</android.widget.RelativeLayout>
